<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net461</TargetFramework>
    <Authors>Maraf</Authors>
    <Company>Neptuo</Company>
    <Description>Branch backuping extension for GitExtensions</Description>
    <RepositoryUrl>https://github.com/maraf/GitExtensions.BundleBackuper</RepositoryUrl>
    <PackageTags>Neptuo GitExtensions</PackageTags>
    <PackageProjectUrl>http://www.neptuo.com/project/dev/gitextensions.bundlebackuper</PackageProjectUrl>
  </PropertyGroup>

  <ItemGroup>
    <Reference Include="GitUI">
      <HintPath>C:\Program Files (x86)\GitExtensions\GitUI.dll</HintPath>
    </Reference>
    <Reference Include="GitUIPluginInterfaces">
      <HintPath>C:\Program Files (x86)\GitExtensions\GitUIPluginInterfaces.dll</HintPath>
    </Reference>
  </ItemGroup>

  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command="copy &quot;$(TargetPath)&quot; &quot;C:\Program Files (x86)\GitExtensions\Plugins\$(TargetFileName)&quot;" />
  </Target>

</Project>
